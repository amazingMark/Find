<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.source.find.find.chat.ApplyForChatGroupActivity"
    android:background="@color/ColorContentBg">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_apply_cg_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/ColorTitleBar"
        android:gravity="center_vertical"
        app:layout_heightPercent="10%">

        <ImageButton
            android:id="@+id/ib_apply_cg_title_pre"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/back_pre"
            app:layout_heightPercent="60%"
            app:layout_marginLeftPercent="1%"
            app:layout_widthPercent="10%" />

        <TextView
            android:id="@+id/tv_apply_cg_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="申请加入"
            android:textColor="@color/ColorTitleText"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_apply_cg_title_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:text="发送"
            android:textColor="@color/ColorTitleText" />

    </android.support.percent.PercentRelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="30%"
        android:layout_below="@id/prl_apply_cg_title"
        app:layout_marginTopPercent="2%"
        android:background="@color/ColorBg"
        android:scrollbars="vertical"
        android:gravity="start"
        android:hint="输入验证信息" />

</android.support.percent.PercentRelativeLayout>
