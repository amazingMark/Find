<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.ChatActivity">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ColorUniversal"
        android:id="@+id/rl_title">

        <ImageButton
            android:id="@+id/ib_prl_register_title_pre"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@mipmap/back_previous"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:layout_heightPercent="70%"
            app:layout_marginLeftPercent="3%"
            app:layout_widthPercent="10%"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="聊聊旅行那些事"
            android:id="@+id/tv_title"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:textColor="@android:color/white" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_save"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/chatgroup"
            app:layout_marginRightPercent="5%"/>

    </android.support.percent.PercentRelativeLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lv_listview"
        android:layout_below="@+id/rl_title"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/rl_input"/>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:id="@+id/rl_input"
        android:layout_above="@+id/rl_end">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_widthPercent="81.2%"
            android:layout_centerVertical="true"
            app:layout_marginLeftPercent="3%"
            android:id="@+id/et_input"
            android:background="@drawable/login_edittext_input"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_add"
            app:layout_heightPercent="80%"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/add_above"
            app:layout_marginRightPercent="2%"/>
        </android.support.percent.PercentRelativeLayout>
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_end"
        app:layout_heightPercent="15%">

    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>
