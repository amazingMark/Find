<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".club.ClubHome">


    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_club_home_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/ColorTitleBar"
        android:gravity="center_vertical"
        app:layout_heightPercent="10%">

        <ImageButton
            android:id="@+id/ib_club_home_title_pre"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back_previous"
            app:layout_heightPercent="60%"
            app:layout_marginLeftPercent="1%"
            app:layout_widthPercent="10%" />

        <TextView
            android:id="@+id/tv_club_home_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="社团主页"
            android:textColor="@color/ColorTitleText"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/ib_club_home_title_down"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="30%"
            app:layout_widthPercent="5%"
            app:layout_marginTopPercent="40%"
            android:layout_toEndOf="@id/tv_club_home_title_name"
            android:background="@drawable/pull_down" />

        <Button
            android:id="@+id/btn_club_home_title_chatgroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:text="聊天组"
            android:textColor="@color/ColorTitleText" />

    </android.support.percent.PercentRelativeLayout>

    <!--此处复用主页代码-->

</android.support.percent.PercentRelativeLayout>
