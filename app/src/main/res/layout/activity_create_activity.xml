<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.source.find.find.club.CreateActivityActivity"
    android:background="@color/ColorContentBg">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_create_activity_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/ColorTitleBar"
        android:gravity="center_vertical"
        app:layout_heightPercent="10%">

        <ImageButton
            android:id="@+id/ib_create_activity_title_pre"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back_previous"
            app:layout_heightPercent="60%"
            app:layout_marginLeftPercent="1%"
            app:layout_widthPercent="10%" />

        <TextView
            android:id="@+id/tv_create_activity_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="申请活动"
            android:textColor="@color/ColorTitleText"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_create_activity_title_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:text="发送"
            android:textColor="@color/ColorTitleText" />

    </android.support.percent.PercentRelativeLayout>


    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_create_activity_add_icon"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/prl_create_activity_title"
        app:layout_heightPercent="25%">

        <android.support.percent.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:background="@color/ColorBg"
            app:layout_heightPercent="80%"
            app:layout_widthPercent="80%">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="点此添加活动海报" />
        </android.support.percent.PercentRelativeLayout>
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_create_activity_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/prl_create_activity_add_icon"
        android:background="@color/ColorBg"
        android:gravity="center_vertical"
        app:layout_heightPercent="10%">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="活动名称"
            android:textSize="20sp"
            android:textColor="@color/ColorTabText"
            app:layout_marginLeftPercent="3%"/>

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_create_activity_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/prl_create_activity_name"
        android:background="@color/ColorBg"
        android:gravity="center_vertical"
        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="1%">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="活动地点"
            android:textSize="20sp"
            android:textColor="@color/ColorTabText"
            app:layout_marginLeftPercent="3%"/>

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_create_activity_starttime"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/prl_create_activity_area"
        android:background="@color/ColorBg"
        android:gravity="center_vertical"
        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="1%">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="开始时间"
            android:textSize="20sp"
            android:textColor="@color/ColorTabText"
            app:layout_marginLeftPercent="3%"/>

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_create_activity_brief"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="20%"
        app:layout_marginTopPercent="1%"
        android:layout_below="@id/prl_create_activity_starttime"
        android:background="@color/ColorBg">
        <EditText
            android:id="@+id/et_create_activity_brief"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:gravity="start"
            android:hint="活动简介"
            android:textSize="20sp" />
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_create_activity_check"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/prl_create_activity_brief"
        android:background="@color/ColorBg"
        android:gravity="center_vertical"
        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="1%">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="通知所有社员"
            android:textSize="20sp"
            android:textColor="@color/ColorTabText"
            app:layout_marginLeftPercent="3%"/>

    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>
