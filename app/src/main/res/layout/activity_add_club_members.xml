<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.source.find.find.club.AddClubMembersActivity"
    android:background="@color/ColorContentBg">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_add_club_members_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/ColorTitleBar"
        android:gravity="center_vertical"
        app:layout_heightPercent="10%">

        <ImageButton
            android:id="@+id/ib_add_club_members_title_pre"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back_previous"
            app:layout_heightPercent="60%"
            app:layout_marginLeftPercent="1%"
            app:layout_widthPercent="10%" />

        <TextView
            android:id="@+id/tv_add_club_members_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="社团成员"
            android:textColor="@color/ColorTitleText"
            android:textSize="24sp" />

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_add_club_members_search"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="10%"
        android:gravity="center"
        android:background="#FFFFFF"
        android:layout_below="@id/prl_add_club_members_title">

        <EditText
            android:id="@+id/et_club_search_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="90%"
            app:layout_heightPercent="70%"
            android:background="@drawable/round_edittext"
            android:layout_centerVertical="true"
            android:hint="搜索社员"/>

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_club_members_item1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="15%"
        android:layout_below="@id/prl_add_club_members_search"
        android:gravity="center_vertical"
        android:background="@color/ColorBg">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="15%"
            app:layout_marginLeftPercent="5%"
            android:scaleType="fitCenter"
            android:src="@drawable/comment_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="李煜欢"
            android:textSize="24sp"
            app:layout_marginLeftPercent="25%"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="20%"
            app:layout_heightPercent="50%"
            app:layout_marginLeftPercent="70%"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="会长"
            android:textSize="24sp"
            android:textColor="@color/ColorTitleText"
            android:background="@drawable/rounded_textview" />
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_club_members_item2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="15%"
        android:layout_below="@id/prl_club_members_item1"
        android:gravity="center_vertical"
        android:background="@color/ColorBg"
        app:layout_marginTopPercent="1%">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="15%"
            app:layout_marginLeftPercent="5%"
            android:scaleType="fitCenter"
            android:src="@drawable/comment_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="明晓溪"
            android:textSize="24sp"
            app:layout_marginLeftPercent="25%"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="20%"
            app:layout_heightPercent="50%"
            app:layout_marginLeftPercent="70%"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="副会长"
            android:textSize="24sp"
            android:textColor="@color/ColorTitleText"
            android:background="@drawable/rounded_textview" />
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_club_members_item3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="15%"
        android:layout_below="@id/prl_club_members_item2"
        android:gravity="center_vertical"
        android:background="@color/ColorBg"
        app:layout_marginTopPercent="1%">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="15%"
            app:layout_marginLeftPercent="5%"
            android:scaleType="fitCenter"
            android:src="@drawable/comment_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="天天"
            android:textSize="24sp"
            app:layout_marginLeftPercent="25%"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="20%"
            app:layout_heightPercent="50%"
            app:layout_marginLeftPercent="70%"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="副会长"
            android:textSize="24sp"
            android:textColor="@color/ColorTitleText"
            android:background="@drawable/rounded_textview" />
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_club_members_item4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="15%"
        android:layout_below="@id/prl_club_members_item3"
        android:gravity="center_vertical"
        android:background="@color/ColorBg"
        app:layout_marginTopPercent="1%">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="15%"
            app:layout_marginLeftPercent="5%"
            android:scaleType="fitCenter"
            android:src="@drawable/comment_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="金小洛"
            android:textSize="24sp"
            app:layout_marginLeftPercent="25%"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="20%"
            app:layout_heightPercent="50%"
            app:layout_marginLeftPercent="70%"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="部长"
            android:textSize="24sp"
            android:textColor="@color/ColorTitleText"
            android:background="@drawable/rounded_textview" />
    </android.support.percent.PercentRelativeLayout>

</android.support.percent.PercentRelativeLayout>
