<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginAndRegister.RegisterActivity">
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTheme"
        app:layout_heightPercent="9%"
        android:id="@+id/relativeLayout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_back"
            android:src="@mipmap/back"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:layout_marginLeftPercent="5%"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="注册"
            android:id="@+id/tv_title"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:textColor="@android:color/white" />

    </android.support.percent.PercentRelativeLayout>
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignLeft="@+id/relativeLayout"
        android:layout_alignStart="@+id/relativeLayout"
        android:background="@color/LoginBackGround">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="5%"
            app:layout_widthPercent="90%"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_school"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:hint="输入手机号"
            android:background="@drawable/login_edittext_input"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="90%"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/et_phone"
            android:layout_below="@+id/et_school"
            android:layout_centerHorizontal="true"
            android:hint="请输入密码"
            android:background="@drawable/login_edittext_input"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="90%"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/et_pwd"
            android:layout_below="@+id/et_phone"
            android:layout_centerHorizontal="true"
            android:hint="设置密码(不少于6位)"
            android:background="@drawable/login_edittext_input"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:id="@+id/bt_getCaptcha"
            android:layout_below="@+id/et_pwd"
            android:layout_alignStart="@+id/et_pwd"
            android:layout_alignEnd="@+id/et_pwd"
            app:layout_marginTopPercent="5%"
            android:background="@drawable/orange_flat_button"
            android:textSize="20sp"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="已有账号？立即登陆"
            android:id="@+id/textView6"
            android:textColor="@color/blue"
            android:layout_below="@+id/bt_getCaptcha"
            android:layout_centerHorizontal="true"
            app:layout_marginTopPercent="4%" />

        </android.support.percent.PercentRelativeLayout>

</android.support.percent.PercentRelativeLayout>
