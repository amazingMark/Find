<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.source.find.find.chat.ChatGroupDetailActivity"
    android:background="@color/ColorContentBg">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_chat_group_detail_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/chat_group_bg"
        app:layout_heightPercent="30%">

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/prl_chat_group_detail_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            app:layout_heightPercent="25%">

            <ImageButton
                android:id="@+id/ib_chat_group_detail_title_pre"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/back_previous"
                app:layout_heightPercent="60%"
                app:layout_marginLeftPercent="1%"
                app:layout_widthPercent="10%" />

            <TextView
                android:id="@+id/tv_chat_group_detail_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="聊聊旅行那些事"
                android:textColor="@color/ColorTitleText"
                android:textSize="24sp" />


        </android.support.percent.PercentRelativeLayout>


    </android.support.percent.PercentRelativeLayout>

    <LinearLayout
        android:id="@+id/prl_chat_group_detail_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/prl_chat_group_detail_bg"
        android:background="@color/ColorBg"
        android:paddingBottom="32dp"
        android:paddingTop="32dp">

        <TextView
            android:id="@+id/tv_chat_group_detail_notice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="我是武汉大学的旅行小组哦，喜欢旅行的朋友们快来和大家一起交流吧。" />

    </LinearLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="20%"
        app:layout_marginLeftPercent="10%"
        app:layout_marginTopPercent="15%"
        app:layout_widthPercent="80%">

        <ImageView
            android:id="@+id/iv_chat_group_detail_icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/chat_group_icon"
            app:layout_widthPercent="30%" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="聊聊旅行那些事" />
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_chat_group_detail_director"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/prl_chat_group_detail_notice"
        android:background="@color/ColorBg"
        android:gravity="center_vertical"
        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="2%">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="小组组长"
            app:layout_marginLeftPercent="3%" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/director"
            app:layout_marginLeftPercent="40%" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="金小洛"
            app:layout_marginLeftPercent="75%" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:background="@drawable/turn_to"
            app:layout_heightPercent="70%"
            app:layout_marginLeftPercent="90%"
            app:layout_widthPercent="10%" />

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_chat_group_detail_member"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/prl_chat_group_detail_director"
        android:background="@color/ColorBg"
        app:layout_heightPercent="20%"
        app:layout_marginTopPercent="2%">

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/prl_chat_group_detail_member_brief"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="50%">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="小组成员"
                app:layout_marginLeftPercent="3%" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="4人"
                app:layout_marginLeftPercent="80%" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerVertical="true"
                android:background="@drawable/turn_to"
                app:layout_heightPercent="70%"
                app:layout_marginLeftPercent="90%"
                app:layout_widthPercent="10%" />
        </android.support.percent.PercentRelativeLayout>

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="50%"
            android:layout_below="@id/prl_chat_group_detail_member_brief">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/director"
                app:layout_marginLeftPercent="10%"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/director"
                app:layout_marginLeftPercent="30%"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/director"
                app:layout_marginLeftPercent="50%"/>
            <!--<GridView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"/>-->
        </android.support.percent.PercentRelativeLayout>
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="10%"
        android:layout_alignParentBottom="true"
        android:background="@color/ColorBg">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_widthPercent="80%"
            app:layout_marginTopPercent="10%"
            app:layout_marginBottomPercent="10%"
            android:background="@drawable/rounded_textview"
            android:text="加入聊天小组"
            android:textColor="@color/ColorTitleText"
            android:textSize="24sp"
            android:layout_centerInParent="true"
            android:gravity="center"/>

    </android.support.percent.PercentRelativeLayout>

</android.support.percent.PercentRelativeLayout>
