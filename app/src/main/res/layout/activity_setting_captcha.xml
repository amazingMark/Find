<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorContentBg"
    tools:context=".setting.SettingCaptchaActivity">

    <android.support.percent.PercentRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ColorUniversal"
    app:layout_heightPercent="9%"
    android:id="@+id/rl_title">

        <ImageButton
            android:id="@+id/ib_prl_register_title_pre"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@mipmap/back_previous"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:layout_heightPercent="70%"
            app:layout_marginLeftPercent="3%"
            app:layout_widthPercent="10%"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="验证码确认"
        android:id="@+id/tv_title"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textColor="@android:color/white" />


</android.support.percent.PercentRelativeLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="6%"
        app:layout_marginTopPercent="9%"
        app:layout_marginLeftPercent="3%"
        app:layout_marginRightPercent="3%"
        android:id="@+id/et_phone"
        android:layout_below="@+id/rl_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/ColorBg"
        android:hint="    请填写验证码"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认"
        android:textSize="20sp"
        android:textColor="@color/ColorBg"
        android:id="@+id/bt_submit"
        android:layout_below="@+id/et_phone"
        app:layout_marginTopPercent="9%"
        android:layout_alignEnd="@+id/et_phone"
        android:layout_alignStart="@+id/et_phone"
        android:background="@drawable/orange_flat_button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="没有收到？重新获取验证码"
        android:textColor="@color/ColorBlue"
        android:id="@+id/textView13"
        android:layout_below="@+id/bt_submit"
        app:layout_marginTopPercent="3%"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"/>


</android.support.percent.PercentRelativeLayout>

