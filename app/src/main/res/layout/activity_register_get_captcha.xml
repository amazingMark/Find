<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginandregister.RegisterGetCaptchaActivity">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_captcha_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ColorUniversal"
        app:layout_heightPercent="10%">

        <ImageButton
            android:id="@+id/ib_prl_captcha_title_pre"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/back_previous"
            app:layout_heightPercent="70%"
            app:layout_marginLeftPercent="3%"
            app:layout_widthPercent="10%" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="注册"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textSize="25sp" />

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/prl_captcha_title"
        android:layout_below="@+id/prl_captcha_title"
        android:background="@color/ColorContentBg">

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp"
            android:text="你的手机:13018070777"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_phone"
            android:layout_below="@+id/tv_phone"
            android:layout_centerHorizontal="true"
            android:text="验证码已发送到你的手机"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            app:layout_marginTopPercent="2%" />

        <EditText
            android:id="@+id/et_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_sign"
            android:layout_centerHorizontal="true"
            android:background="@drawable/login_edittext_input"
            android:ems="10"
            android:hint="请填写验证码"
            android:inputType="textPersonName"
            app:layout_marginTopPercent="5%"
            app:layout_widthPercent="90%" />

        <Button
            android:id="@+id/bt_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/et_school"
            android:layout_alignStart="@+id/et_school"
            android:layout_below="@+id/et_school"
            android:background="@drawable/orange_flat_button"
            android:text="确认"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_marginTopPercent="5%" />

        <TextView
            android:id="@+id/tv_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_submit"
            android:layout_centerHorizontal="true"
            android:text="没有收到？重新获取验证码"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/ColorBlue"
            app:layout_marginTopPercent="4%" />
    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>
