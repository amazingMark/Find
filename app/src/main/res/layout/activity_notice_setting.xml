<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorContentBg"
    tools:context=".setting.NoticeSettingActivity">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ColorUniversal"
        app:layout_heightPercent="11%"
        android:id="@+id/rl_title">

        <ImageButton
            android:id="@+id/ib_prl_register_title_pre"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@mipmap/back_previous"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:layout_heightPercent="70%"
            app:layout_marginLeftPercent="3%"
            app:layout_widthPercent="10%"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="隐私设置"
            android:id="@+id/tv_title"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:textColor="@android:color/white" />

    </android.support.percent.PercentRelativeLayout>


    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_title"
        app:layout_marginTopPercent="2%"
        app:layout_heightPercent="7%"
        android:background="@color/ColorBg"
        android:id="@+id/rl_control_1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="接受新消息通知"
            app:layout_marginLeftPercent="5%"
            android:layout_centerVertical="true"
            />
        <com.source.find.find.scrollpicsview.Switch
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="3.5%"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/sw_phone"
            />

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_control_1"
        app:layout_marginTopPercent="2%"
        app:layout_heightPercent="7%"
        android:background="@color/ColorBg"
        android:id="@+id/rl_control_2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="振动"
            app:layout_marginLeftPercent="5%"
            android:layout_centerVertical="true"
            />
        <com.source.find.find.scrollpicsview.Switch
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="3.5%"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/ColorModuleText"
            android:id="@+id/sw_address"
            />

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_control_2"
        app:layout_marginTopPercent="2%"
        app:layout_heightPercent="7%"
        android:background="@color/ColorBg"
        android:id="@+id/rl_control_3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="私聊"
            app:layout_marginLeftPercent="5%"
            android:layout_centerVertical="true"
            />
        <com.source.find.find.scrollpicsview.Switch
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="3.5%"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/sw_ptpchat"
            />

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_control_3"
        app:layout_marginTopPercent="0.5%"
        app:layout_heightPercent="7%"
        android:background="@color/ColorBg"
        android:id="@+id/rl_control_4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="评论我的"
            app:layout_marginLeftPercent="5%"
            android:layout_centerVertical="true"
            />
        <com.source.find.find.scrollpicsview.Switch
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="3.5%"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/ColorModuleText"
            android:id="@+id/sw_commentme"
            />
        </android.support.percent.PercentRelativeLayout>
        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_control_4"
            app:layout_marginTopPercent="0.5%"
            app:layout_heightPercent="7%"
            android:background="@color/ColorBg"
            android:id="@+id/rl_control_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="喜欢我的"
                app:layout_marginLeftPercent="5%"
                android:layout_centerVertical="true"
                />
            <com.source.find.find.scrollpicsview.Switch
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                app:layout_marginLeftPercent="5%"
                app:layout_marginRightPercent="3.5%"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/ColorModuleText"
                android:id="@+id/sw_likeme"
                />

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_control_5"
        app:layout_marginTopPercent="0.5%"
        app:layout_heightPercent="7%"
        android:background="@color/ColorBg"
        android:id="@+id/rl_control_6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="\@我的"
            app:layout_marginLeftPercent="5%"
            android:layout_centerVertical="true"
            />
        <com.source.find.find.scrollpicsview.Switch
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="3.5%"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/ColorModuleText"
            android:id="@+id/sw_atme"
            />
        </android.support.percent.PercentRelativeLayout>
        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_control_6"
            app:layout_marginTopPercent="0.5%"
            app:layout_heightPercent="7%"
            android:background="@color/ColorBg"
            android:id="@+id/rl_control_7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="活动通知"
                app:layout_marginLeftPercent="5%"
                android:layout_centerVertical="true"
                />
            <com.source.find.find.scrollpicsview.Switch
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                app:layout_marginLeftPercent="5%"
                app:layout_marginRightPercent="3.5%"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/ColorModuleText"
                android:id="@+id/sw_activitynotice"
                />

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_control_7"
        app:layout_marginTopPercent="0.5%"
        app:layout_heightPercent="7%"
        android:background="@color/ColorBg"
        android:id="@+id/rl_control_8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="活动提醒"
            app:layout_marginLeftPercent="5%"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="提前两小时"
            android:layout_toLeftOf="@+id/im_in_1"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/turn_right"
            android:id="@+id/im_in_1"
            android:layout_alignParentRight="true"
            app:layout_marginRightPercent="3.5%"
            android:layout_centerVertical="true"
            />

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_control_8"
        app:layout_marginTopPercent="3%"
        app:layout_heightPercent="7%"
        android:background="@color/ColorBg"
        android:id="@+id/rl_control_9">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="夜间防打扰"
            app:layout_marginLeftPercent="5%"
            android:layout_centerVertical="true"
            />
        <com.source.find.find.scrollpicsview.Switch
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="3.5%"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/ColorModuleText"
            android:id="@+id/sw_night_defend"
            />

    </android.support.percent.PercentRelativeLayout>

</android.support.percent.PercentRelativeLayout>