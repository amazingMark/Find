<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.find.HomePage.ActicityActivity">

    <android.support.percent.PercentFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fl_content"
        android:layout_above="@+id/rl_submit">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lv_listview"
            android:layout_alignParentTop="true"
            />
        <android.support.percent.PercentFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            app:layout_heightPercent="14.2%"
            android:id="@+id/rl_title"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorTheme"
                android:alpha="0"
                />
            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_back"
                    android:src="@mipmap/back"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    app:layout_marginLeftPercent="5%"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="金小洛"
                    android:id="@+id/tv_title"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="25sp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_over"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="更多"
                    app:layout_marginRightPercent="5%"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"/>

            </android.support.percent.PercentRelativeLayout>
        </android.support.percent.PercentFrameLayout>
    </android.support.percent.PercentFrameLayout>
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent = "9%"
        android:background="@color/navy"
        android:layout_alignParentBottom = "true"
        android:id="@+id/rl_submit">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/orange_flat_button"
            app:layout_heightPercent="70%"
            app:layout_widthPercent="90%"
            android:layout_centerInParent="true"
            android:text="我要参加"
            android:textColor="@color/white"
            android:textSize="20sp"
        />

    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>
