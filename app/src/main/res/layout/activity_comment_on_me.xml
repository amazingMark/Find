<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.source.find.find.message.CommentOnMe"
    android:background="@color/ColorContentBg">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_comment_on_me_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/ColorTitleBar"
        android:gravity="center_vertical"
        app:layout_heightPercent="10%">

        <ImageButton
            android:id="@+id/ib_chat_group_title_pre"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/back_pre"
            app:layout_heightPercent="60%"
            app:layout_marginLeftPercent="1%"
            app:layout_widthPercent="10%" />

        <TextView
            android:id="@+id/tv_chat_group_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="评论我的"
            android:textColor="@color/ColorTitleText"
            android:textSize="24sp" />

    </android.support.percent.PercentRelativeLayout>
    
    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_comment_on_me_item1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="15%"
        android:layout_below="@id/prl_comment_on_me_title"
        android:gravity="center_vertical"
        android:background="@color/ColorBg">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="15%"
            app:layout_marginLeftPercent="5%"
            android:scaleType="fitCenter"
            android:src="@mipmap/comment_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="李煜欢"
            app:layout_marginLeftPercent="25%"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="评论了你的分享"
            android:textColor="@color/ColorTabText"
            app:layout_marginLeftPercent="40%"/>
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_comment_on_me_item2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="15%"
        android:layout_below="@id/prl_comment_on_me_item1"
        android:gravity="center_vertical"
        app:layout_marginTopPercent="1%"
        android:background="@color/ColorBg">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="15%"
            app:layout_marginLeftPercent="5%"
            android:scaleType="fitCenter"
            android:src="@mipmap/comment_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="明晓溪"
            app:layout_marginLeftPercent="25%"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="评论了你的分享 “一场是"
            android:textColor="@color/ColorTabText"
            app:layout_marginLeftPercent="40%"/>
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_comment_on_me_item3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="15%"
        android:layout_below="@id/prl_comment_on_me_item2"
        android:gravity="center_vertical"
        app:layout_marginTopPercent="1%"
        android:background="@color/ColorBg">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="15%"
            app:layout_marginLeftPercent="5%"
            android:scaleType="fitCenter"
            android:src="@mipmap/comment_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="天天"
            app:layout_marginLeftPercent="25%"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="评论了你的分享 “一场是"
            android:textColor="@color/ColorTabText"
            app:layout_marginLeftPercent="40%"/>
    </android.support.percent.PercentRelativeLayout>

