<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.ChatGroupActivity">

    <android.support.percent.PercentRelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/ColorUniversal"
        app:layout_heightPercent="10%"
        android:id="@+id/title">

        <ImageButton
            android:id="@+id/ib_prl_register_title_pre"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@mipmap/back_previous"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:layout_heightPercent="70%"
            app:layout_marginLeftPercent="3%"
            app:layout_widthPercent="10%"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="聊天小组"
            android:id="@+id/tv_title"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="创建"
            android:id="@+id/tv_create"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            app:layout_marginRightPercent="7%"/>

    </android.support.percent.PercentRelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="所有聊天小组"
        android:id="@+id/textView12"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true"
        app:layout_marginLeftPercent="7%"
        app:layout_marginTopPercent="3%"/>

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridView"
        android:layout_below="@+id/textView12"
        android:numColumns="2"/>

</android.support.percent.PercentRelativeLayout>
