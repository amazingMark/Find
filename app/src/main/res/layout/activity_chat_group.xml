<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".chat.ChatGroupActivity">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_club_home_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/ColorTitleBar"
        android:gravity="center_vertical"
        app:layout_heightPercent="10%">

        <ImageButton
            android:id="@+id/ib_chat_group_title_pre"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back_previous"
            app:layout_heightPercent="60%"
            app:layout_marginLeftPercent="1%"
            app:layout_widthPercent="10%" />

        <TextView
            android:id="@+id/tv_chat_group_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="武汉大学印刷摄影协会"
            android:textColor="@color/ColorTitleText"
            android:textSize="24sp" />


        <ImageButton
            android:id="@+id/ib_chatgroup_title_detail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="60%"
            app:layout_marginRightPercent="1%"
            app:layout_widthPercent="10%"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/chat_group"
            android:textColor="@color/ColorTitleText" />

    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>
