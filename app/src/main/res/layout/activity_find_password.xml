<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginandregister.FindPasswordActivity">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ColorUniversal"
        app:layout_heightPercent="10%">

        <ImageButton
            android:id="@+id/ib_prl_register_title_pre"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/back_previous"
            app:layout_heightPercent="70%"
            app:layout_marginLeftPercent="3%"
            app:layout_widthPercent="10%" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="找回密码"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textSize="25sp" />

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/relativeLayout"
        android:layout_alignStart="@+id/relativeLayout"
        android:layout_below="@+id/relativeLayout"
        android:background="@color/ColorContentBg">

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/login_edittext_input"
            android:ems="10"
            android:hint="请输入手机号"
            android:inputType="textPersonName"
            app:layout_marginTopPercent="10%"
            app:layout_widthPercent="90%" />

        <EditText
            android:id="@+id/et_Captcha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/et_phone"
            android:layout_below="@+id/et_phone"
            android:background="@drawable/login_edittext_input"
            android:ems="10"
            android:hint="请输入验证码"
            android:inputType="textPersonName"
            app:layout_marginTopPercent="5%"
            app:layout_widthPercent="60%" />

        <Button
            android:id="@+id/bt_againCaptcha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/et_phone"
            android:layout_alignTop="@+id/et_Captcha"
            android:background="@drawable/orange_flat_button"
            android:text="重新获取验证码"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/et_new_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/et_phone"
            android:layout_alignStart="@+id/et_phone"
            android:layout_below="@+id/et_Captcha"
            android:background="@drawable/login_edittext_input"
            android:ems="10"
            android:hint="请输入新密码(不少于6位)"
            android:inputType="textPersonName"
            app:layout_marginTopPercent="5%"
            app:layout_widthPercent="90%" />


        <Button
            android:id="@+id/bt_getCaptcha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/et_phone"
            android:layout_alignStart="@+id/et_phone"
            android:layout_below="@+id/et_new_pwd"
            android:background="@drawable/orange_flat_button"
            android:text="确定"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_marginTopPercent="10%" />

    </android.support.percent.PercentRelativeLayout>

</android.support.percent.PercentRelativeLayout>
