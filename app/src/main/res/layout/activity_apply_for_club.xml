<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorContentBg"
    tools:context="com.source.find.find.club.ApplyForClubActivity">


    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_apply_club_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/ColorTitleBar"
        android:gravity="center_vertical"
        app:layout_heightPercent="10%">

        <ImageButton
            android:id="@+id/ib_apply_club_title_pre"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back_previous"
            app:layout_heightPercent="60%"
            app:layout_marginLeftPercent="1%"
            app:layout_widthPercent="10%" />

        <TextView
            android:id="@+id/tv_apply_club_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="申请加入"
            android:textColor="@color/ColorTitleText"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_apply_club_title_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:text="发送"
            android:textColor="@color/ColorTitleText" />

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_apply_club_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/prl_apply_club_title"
        android:background="@color/ColorBg"
        android:gravity="center_vertical"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="2%">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_marginLeftPercent="3%"
            android:gravity="center_vertical"
            android:text="姓名"
            android:textColor="@color/ColorTabText"/>

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_apply_club_college"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/prl_apply_club_name"
        android:background="@color/ColorBg"
        android:gravity="center_vertical"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="2%">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_marginLeftPercent="3%"
            android:gravity="center_vertical"
            android:text="学院"
            android:textColor="@color/ColorTabText"/>

    </android.support.percent.PercentRelativeLayout>
    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_apply_club_contact"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/prl_apply_club_college"
        android:background="@color/ColorBg"
        android:gravity="center_vertical"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="2%">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_marginLeftPercent="3%"
            android:gravity="center_vertical"
            android:text="联系方式"
            android:textColor="@color/ColorTabText"/>

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_apply_club_self"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/prl_apply_club_contact"
        android:background="@color/ColorBg"
        android:gravity="center_vertical"
        app:layout_heightPercent="20%"
        app:layout_marginTopPercent="2%">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_marginLeftPercent="3%"
            android:scrollbars="vertical"
            android:gravity="start"
            android:text="自我介绍"
            android:textColor="@color/ColorTabText"/>

    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>
