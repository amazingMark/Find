<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy"
    tools:context="com.example.find.PersonSetting.PrivacyActivity">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTheme"
        app:layout_heightPercent="11%"
        android:id="@+id/rl_title">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_back"
            android:src="@mipmap/back"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:layout_marginLeftPercent="5%"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="隐私设置"
            android:id="@+id/tv_title"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:textColor="@android:color/white" />

    </android.support.percent.PercentRelativeLayout>


    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_title"
        app:layout_marginTopPercent="2%"
        app:layout_heightPercent="7%"
        android:background="@color/white"
        android:id="@+id/rl_control_1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="通讯录访问"
            app:layout_marginLeftPercent="5%"
            android:layout_centerVertical="true"
            />
        <MyView.Switch
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="3.5%"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/sw_phone"
            />

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_control_1"
        app:layout_marginTopPercent="2%"
        app:layout_heightPercent="7%"
        android:background="@color/white"
        android:id="@+id/rl_control_2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="地理位置访问"
            app:layout_marginLeftPercent="5%"
            android:layout_centerVertical="true"
            />
        <MyView.Switch
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="3.5%"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/textgrey"
            android:id="@+id/sw_address"
            />

    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>
