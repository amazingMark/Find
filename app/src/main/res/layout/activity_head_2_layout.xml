<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <MyView.RoundImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/head"
        app:layout_marginLeftPercent="3.5%"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="金小洛"
        android:id="@+id/name"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/head"
        app:layout_marginLeftPercent="3%"
        android:textSize="15sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="武汉大学"
        android:id="@+id/tv_school"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/name"
        android:textSize="13sp"
        android:textColor="#999999"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="活动地点：  武汉大学信息学部1教302"
        android:id="@+id/tv_address"
        android:layout_below="@+id/tv_school"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        app:layout_marginLeftPercent="3.5%"
        app:layout_marginRightPercent="3.5%"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="活动时间：  2016-02-08   14：00"
        android:id="@+id/tv_time"
        android:layout_below="@+id/tv_address"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        app:layout_marginLeftPercent="3.5%"
        app:layout_marginRightPercent="3.5%"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
        android:id="@+id/tv_activity"
        android:layout_below="@+id/tv_time"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        app:layout_marginLeftPercent="3.5%"
        app:layout_marginRightPercent="3.5%"
        />



    <MyView.RoundImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/im_head_1"
        app:layout_widthPercent="8.5%"
        android:src="@mipmap/bird1"
        app:layout_marginLeftPercent="4%"
        android:layout_below="@+id/tv_activity"
        />
    <MyView.RoundImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/im_head_2"
        app:layout_widthPercent="8.5%"
        android:layout_toRightOf="@+id/im_head_1"
        app:layout_marginLeftPercent="1%"
        android:layout_alignTop="@+id/im_head_1"
        android:src="@mipmap/bird1"
        />
    <MyView.RoundImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/im_head_3"
        app:layout_widthPercent="8.5%"
        android:layout_toRightOf="@+id/im_head_2"
        app:layout_marginLeftPercent="1%"
        android:layout_alignTop="@+id/im_head_1"
        android:src="@mipmap/bird1"
        />
<android.support.percent.PercentRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/im_head_3"
    android:layout_alignBottom="@+id/im_head_3"
    android:layout_toRightOf="@+id/im_head_3"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20人已参加"
        android:id="@+id/tv_joined"
        android:layout_alignParentRight="true"
        app:layout_marginRightPercent="10%"
        android:layout_centerVertical="true"
        />
</android.support.percent.PercentRelativeLayout>
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navy"
        android:layout_below="@+id/im_head_3"
        android:id="@+id/rl_commentNum"
        app:layout_marginTopPercent="1%"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论(3条)"
            app:layout_marginLeftPercent="3.5%"
            android:id="@+id/tv_commentNum"
            />

    </android.support.percent.PercentRelativeLayout>

</android.support.percent.PercentRelativeLayout>
