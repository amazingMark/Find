<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.source.find.find.club.CreateVoteActivity">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_create_vote_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/ColorTitleBar"
        android:gravity="center_vertical"
        app:layout_heightPercent="10%">

        <ImageButton
            android:id="@+id/ib_create_vote_title_pre"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/back_pre"
            app:layout_heightPercent="60%"
            app:layout_marginLeftPercent="1%"
            app:layout_widthPercent="10%" />

        <TextView
            android:id="@+id/tv_create_vote_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="发投票"
            android:textColor="@color/ColorTitleText"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_create_vote_title_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:text="发送"
            android:textColor="@color/ColorTitleText" />

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_create_vote_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/prl_create_vote_title"
        android:background="@color/ColorBg"
        android:gravity="center_vertical"
        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="2%">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="投票标题"
            android:textSize="20sp"
            android:textColor="@color/ColorTabText"
            app:layout_marginLeftPercent="3%"/>

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_create_vote_desc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/prl_create_vote_name"
        android:background="@color/ColorBg"
        android:gravity="center_vertical"
        app:layout_heightPercent="20%"
        app:layout_marginTopPercent="2%">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="填写投票描述，让更多人参与投票"
            android:textSize="20sp"
            android:textColor="@color/ColorTabText"
            app:layout_marginLeftPercent="3%"
            android:gravity="start"
            android:scrollbars="vertical"/>

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_create_vote_click"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/prl_create_vote_desc"
        android:background="@color/ColorBg"
        android:gravity="center_vertical"
        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="2%">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@null"
            android:text="点此添加投票选项"
            android:textSize="20sp"
            android:textColor="@color/ColorTabText"
            app:layout_marginLeftPercent="3%"/>

    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>
