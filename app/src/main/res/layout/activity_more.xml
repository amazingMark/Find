<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorContentBg"
    tools:context=".home.MoreActivity">
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ColorUniversal"
        app:layout_heightPercent="10%"
        android:id="@+id/rl_title">

        <ImageButton
            android:id="@+id/ib_prl_register_title_pre"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@mipmap/back_previous"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:layout_heightPercent="70%"
            app:layout_marginLeftPercent="3%"
            app:layout_widthPercent="10%"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="金小洛"
            android:id="@+id/tv_title"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:textColor="@android:color/white" />

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ColorBg"
        app:layout_heightPercent="14%"
        app:layout_marginTopPercent="2%"
        android:id="@+id/rl_head"
        android:layout_below="@+id/rl_title">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="头像"
            android:id="@+id/tv_head"
            android:layout_centerVertical="true"
            app:layout_marginLeftPercent="4%"
            />

        <MyView.RoundImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_head"
            android:src="@mipmap/bird1"
            android:layout_toLeftOf="@+id/iv_in_1"
            android:layout_toStartOf="@+id/iv_in_1"
            android:layout_centerVertical="true"
            app:layout_marginLeftPercent="5%"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_in_1"
            android:src="@mipmap/turn_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

    </android.support.percent.PercentRelativeLayout>
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ColorBg"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="0.5%"
        android:id="@+id/rl_name"
        android:layout_below="@+id/rl_head">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="昵称"
            android:id="@+id/tv_name_title"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"

            app:layout_marginLeftPercent="4%"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_name"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/iv_in_2"
            android:hint="金小洛"
            android:gravity="right|center_vertical"
            android:background="@null"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_in_2"
            android:src="@mipmap/turn_right"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

    </android.support.percent.PercentRelativeLayout>
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ColorBg"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="0.5%"
        android:id="@+id/rl_sex"
        android:layout_below="@+id/rl_name">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="性别"
            android:id="@+id/tv_sex_title"
            android:layout_centerVertical="true"

            app:layout_marginLeftPercent="4%"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="女"
            android:id="@+id/tv_sex"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/iv_in_3"
            android:gravity="right|center_vertical"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_in_3"
            android:src="@mipmap/turn_right"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_sex"
        android:layout_alignParentStart="true"
        android:id="@+id/tv_school_title"
        android:background="@color/ColorBg"
        app:layout_marginTopPercent="0.5%"
        app:layout_heightPercent="9%">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="她的学校"
            android:id="@+id/textView8"
            android:layout_centerVertical="true"
            app:layout_marginLeftPercent="4%"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="武汉大学"
            android:id="@+id/textView9"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/imageView2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@mipmap/turn_right"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </android.support.percent.PercentRelativeLayout>
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_school_title"
        android:background="@color/ColorBg"
        app:layout_marginTopPercent="2%"
        app:layout_heightPercent="12%">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="个人简介"
            android:id="@+id/textView10"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:layout_marginLeftPercent="4%"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:src="@mipmap/turn_right"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>
