<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy"
    tools:context="com.example.find.PersonSetting.SetNewPwdActivity">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTheme"
        app:layout_heightPercent="9%"
        android:id="@+id/rl_title">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_back"
            android:src="@mipmap/back"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:layout_marginLeftPercent="5%"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="设置新密码"
            android:id="@+id/tv_title"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:textColor="@android:color/white" />


    </android.support.percent.PercentRelativeLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="5%"
        app:layout_marginLeftPercent="3%"
        app:layout_marginRightPercent="3%"
        android:id="@+id/et_newpwd"
        android:layout_below="@+id/rl_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/white"
        android:hint="    请输入新密码"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="8%"
        android:layout_below="@+id/et_newpwd"
        android:id="@+id/et_newpwd_again"
        app:layout_marginTopPercent="0.5%"
        android:background="@color/white"
        android:hint="    请重复新密码"
        android:layout_alignStart="@+id/et_newpwd"
        android:layout_alignEnd="@+id/et_newpwd" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:id="@+id/bt_submit"
        android:layout_below="@+id/et_newpwd_again"
        app:layout_marginTopPercent="6.5%"
        android:layout_alignEnd="@+id/et_newpwd_again"
        android:layout_alignStart="@+id/et_newpwd_again"
        android:background="@drawable/orange_flat_button"/>


</android.support.percent.PercentRelativeLayout>

